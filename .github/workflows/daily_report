name: Informe diario de viento

on:
  schedule:
    - cron: "0 12 * * *"   # 12:00 UTC -> 08:00 CLT (UTC-4) / 09:00 CLT (UTC-3)
  workflow_dispatch:

jobs:
  report:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: |
          pip install pandas

      - name: Ejecutar daily_report
        env:
          CORREO_ORIGEN: ${{ secrets.CORREO_ORIGEN }}
          CONTRASENA: ${{ secrets.CONTRASENA }}
          DESTINATARIOS: ${{ secrets.DESTINATARIOS }}
        run: |
          python daily_report.py
